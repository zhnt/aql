// 测试递归调用
function factorial(n) {
    if (n <= 1) {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
}

function countdown(n) {
    if (n <= 0) {
        return 0;
    } else {
        return 1 + countdown(n - 1);
    }
}

// 测试倒数: countdown(3) = 3  
countdown(3); 

// 测试阶乘: 5! = 120
factorial(9);
